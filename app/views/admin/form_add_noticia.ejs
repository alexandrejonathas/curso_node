<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Formulário de Cadastro de Noticia</title>
		</head>
	<body>
    <h1>Adicionar notícia</h1>
    <br />

		<% if (errors) { %>
			<ul>
				<% for (var i = 0; i < errors.length; i++) { %>
					<li><%= errors[i].msg %></li>
				<% } %>
			</ul>
			<br />
		<% } %>

    <form action="/noticias/salvar" method="post">
      <label>Título</label>
      <input type="text" name="titulo" id="titulo" value="<%= noticia.titulo %>" placeholder="Titulo da notícia">
      <br />
			<label>Resumo</label>
      <input type="text" name="resumo" id="resumo" value="<%= noticia.resumo %>" placeholder="Um resumo da notícia">
      <br />
			<label>Autor</label>
      <input type="text" name="autor" id="autor" value="<%= noticia.autor %>" placeholder="Nome do autor">
      <br />
			<label>Data dos fatos</label>
      <input type="date" name="data_noticia" id="data_noticia" value="<%= noticia.data_noticia %>" placeholder="Data da notícia">
      <br />
      <label>Noticia</label>
      <textarea name="noticia" id="noticia" rows="5" cols="30"><%= noticia.noticia %></textarea>
      <br />
      <input type="submit" value="Adicionar">
    </form>
  </body>
  </html>
